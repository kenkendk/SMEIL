type tdata: { val: i32; };

proc plusone()
    bus plusout {
       val: i32 = 0;
    };

    bus plusin {
        val: i32 = 0;
    };
{
    trace("Wrote value {}", inbus.val);
    plusout.val = plusin.val + 1;
}

network plusone_net(in source: tdata, out dest: tdata) {
    instance plusone_inst of plusone();

    connect 
        source -> plusone_inst.plusin.val;
        plusone_inst.plusout.val -> dest;

}
